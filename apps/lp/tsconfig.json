{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "types": ["astro/client"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@models/*": ["src/models/*"]
    }
  },
  "include": [
    "astro.config.mjs",
    "src",
    "env.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
