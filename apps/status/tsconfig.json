{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "preact",
    "types": ["astro/client"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@icons/*": ["src/components/icons/*"],
      "@pages/*": ["src/components/pages/*"]
    }
  },
  "include": [
    "astro.config.mjs",
    "src",
    "env.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
