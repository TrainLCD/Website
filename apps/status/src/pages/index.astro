---
import BaseLayout from "../layouts/BaseLayout.astro";
import HomePage from "@pages/HomePage";
import type { Locale } from "@utils/locale";

const initialLocale: Locale = "ja";
const messages = {
  ja: {
    title: "TrainLCDシステムステータス",
    description: "TrainLCDサービスの障害情報をお知らせします。",
  },
  en: {
    title: "TrainLCD System Status",
    description: "Latest operational notices for TrainLCD services.",
  },
} as const;

const { title, description } = messages[initialLocale];
---

<BaseLayout {title} {description} lang={initialLocale}>
  <HomePage client:load initialLocale={initialLocale} />
</BaseLayout>
